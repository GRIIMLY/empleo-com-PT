@page
@model EmpleadoComFrontend.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
    <div class="form-group">
        <label asp-for="Usuario.NombreUsuario" class="control-label"> Nombre Usuario</label>
        <input asp-for="Usuario.NombreUsuario" class="form-control" />
        <span asp-validation-for="Usuario.NombreUsuario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Usuario.Contrasenia" class="control-label">Contraseña</label>
        <input asp-for="Usuario.Contrasenia" type="password" class="form-control" />
        <span asp-validation-for="Usuario.Contrasenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary mt-2" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

